{
  "name": "Query user",
  "description": "Queries a user and retrieves its related information, such as the wallet, the label access control, or the current XP.",
  "ubiquity:listeners": ["issue_comment.created"],
  "commands": {
    "query": {
      "ubiquity:example": "/query @UbiquityOS",
      "description": "Returns the user's wallet, access, and multiplier information.",
      "parameters": {
        "type": "object",
        "properties": {
          "username": {
            "description": "Github username",
            "type": "string"
          }
        }
      },
      "examples": [
        {
          "commandInvocation": "@UbiquityOS what is my wallet address?",
          "parameters": {
            "repositoryOwner": "repoOwnerUsername",
            "repositoryName": "example-repo",
            "issueNumber": 42,
            "author": "user1"
          },
          "expectedToolCallResult": {
            "function": "command-query",
            "parameters": {
              "username": "user1"
            }
          }
        }
      ]
    }
  },
  "configuration": {
    "type": "object",
    "properties": {
      "allowPublicQuery": {
        "default": true,
        "description": "Allows any user to query anyone else. If false, only org members can query others.",
        "type": "boolean"
      }
    }
  },
  "homepage_url": "https://command-query-main.deno.dev"
}
